    else
      loaded=$(IPSEC_STATUS_LOADED(node-id))
    fi
    if test "$loaded" -ne $(( (NODES - 1) * 2 )); then
      sleep 3
    else
      break
    fi
    let iterations=$iterations+1
    AT_CHECK([test $iterations -lt 100])
  done
])

